<Alloy>
	<View>
		<View layout="vertical" id="loadingBar" height="120" width="120" borderRadius="15"  backgroundColor="#2E2E2E" >
	        <ActivityIndicator  id="activityIndicator" />
	    	<Label top="5" text="Loading" color="#ffffff" />
	    </View>
		<View class="container" id="inventoryView"  layout="vertical" height="Ti.UI.SIZE">
		 
			<View id="header" backgroundColor="#375540"  >
				<View height="50" width="50" left="2" onClick="goBack" >
					<ImageView image="/images/back-button.png" height="30" left="8"  />
				</View>
				<Label class="h1" id="appTitle">Loading...</Label>
				<View backgroundImage="/images/more-button.png" height="35" width="35" onClick="menuToggle" right="10"></View>
			</View>
			<ScrollView id="item_Details" height="Ti.UI.SIZE"  bottom="5" left="5" right="5"  />
		
		</View>
	</View>
</Alloy>