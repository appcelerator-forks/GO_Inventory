<Alloy>
	<View>
		<View layout="vertical" id="loadingBar" height="120" width="120" borderRadius="15"  backgroundColor="#2E2E2E" >
	        <ActivityIndicator  id="activityIndicator" />
	    	<Label top="5" text="Loading" color="#ffffff" />
	    </View>
		<View class="container" id="inventoryView"  layout="vertical" >
		 
			<View id="header" backgroundColor="#375540"  >
				<ImageView image="/images/back-button.png"  onClick="goBack" width="20" height="30"  left="2"/> 
				<Label class="h1" id="appTitle">INVENTORY</Label>
				<ImageView image="/images/more-button.png" onClick="menuToggle"   right="2" />
			</View>
			  
			
			
			<ScrollView   id="detailScrollView"  layout="vertical"  height="Ti.UI.SIZE" top="5" left="5" right="5" > 
		        <View id="item_Details" height="auto" top="5" left="5" right="5"  ></View>
		       
			</ScrollView>
		
		</View>
	</View>
</Alloy>