<Alloy>
	<View>
		<View layout="vertical" id="loadingBar" height="120" width="120" borderRadius="15"  backgroundColor="#2E2E2E" >
	        <ActivityIndicator  id="activityIndicator" />
	    	<Label top="5" text="Loading" color="#ffffff" />
	    </View>
		<View class="container" id="inventoryView"  layout="vertical" >
			
			<View id="header" backgroundColor="#375540"  >
				<View height="50" width="50" left="2" onClick="back" >
					<ImageView image="/images/back-button.png" height="30" left="8"  />
				</View>
				<Label class="h1" id="appTitle"></Label> 
				<View backgroundImage="/images/add.png" height="30" width="40" onClick="addResource" right="50"></View>
				<View backgroundImage="/images/more-button.png" height="35" width="35" onClick="menuToggle" right="10"></View>
			</View>
			 <View id="view1" layout="vertical" height="Ti.UI.SIZE">
	        	<SearchBar barColor="#ECFFF9" tintColor="#375540"  id="searchResource" text="" top="0" height="50"  hintText="Search Resources..." /> 
	            <ScrollView id="resourceView" height="auto" contentHeight="Ti.UI.SIZE">
					<TableView width="100%" top="0"  id="resTable" height="Ti.UI.SIZE" backgroundImage="/images/bg.jpg" separatorColor="#375540" />
	            </ScrollView> 
	        </View>  
		</View>
	</View>
</Alloy>