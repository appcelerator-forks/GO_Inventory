<Alloy>
	<View>
		<View layout="vertical" id="loadingBar" height="120" width="120" borderRadius="15"  backgroundColor="#2E2E2E" >
	        <ActivityIndicator  id="activityIndicator" />
	    	<Label top="5" text="Loading" color="#ffffff" />
	    </View>
		<View class="container" id="inventoryView"  layout="vertical" >
			
			<View id="header" backgroundColor="#375540"  >
				<View backgroundImage="/images/GO_inventory_hoz.png" height="35" width="35" left="10"></View>
				<Label class="h1" id="appTitle">Stock Out</Label>   
				<View backgroundImage="/images/more-button.png" height="35" width="35" onClick="menuToggle" right="10"></View>
			</View>
			 <View id="view1" layout="vertical" height="Ti.UI.SIZE">
	        	<SearchBar barColor="#ECFFF9" tintColor="#375540"  id="searchOrder" text="" top="0" height="50"  hintText="Search Order # ..." /> 
	            <ScrollView id="orderView">
					<TableView width="100%" top="0"  id="orderTable" height="Ti.UI.SIZE" backgroundImage="/images/bg.jpg" separatorColor="#375540" />
	            </ScrollView> 
	        </View>
			  
		</View>
	</View>
</Alloy>