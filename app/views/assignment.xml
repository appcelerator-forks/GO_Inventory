<Alloy>
	<View class="container" top="0" layout="vertical" id="assignmentView" height="">
		<View id="header" backgroundColor="#375540"  >
			<ImageView zIndex="10" image="/images/GO_inventory_hoz.png" height="35" left="2" />
			<Label zIndex="10" class="h1" id="appTitle">ASSIGNMENT</Label>
			<ImageView zIndex="11" image="/images/more-button.png" onClick="menuToggle" right="2" />
		</View>
		
		<View height="15%" top="0"  layout="vertical" id="content" >
			<Label class="black_text small_text">Please press "Start" to scan iCard or iResources</Label>
			<View id="scanner" width="100%" height="60" ></View>
		</View>
 		<View backgroundColor="#375540" height="5%"><Label class="white_text bold_text" >iCard Details</Label></View>
		<ScrollView id="detailScrollView"  layout="vertical"   height="60%" top="10" left="10" right="10"> 
			
			<ImageView id="productImage" height="50" /> 
			<View layout="horizontal" height=Ti.UI.SIZE>
				<Label class="black_text bold_text" top="0" width="30%" >iCard No :</Label>
				<View id="product_info" layout="vertical" height="Ti.UI.SIZE">
					<Label class="gray_text" id="iCard_info" />
				</View>
			</View>
			 <View layout="horizontal" height=Ti.UI.SIZE top="5" >
				<Label class="black_text bold_text" top="0"  width="30%">Resources :</Label>
				<View id="resource_info" layout="vertical" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT"></View> 
			</View>
			 
		 
		</ScrollView>
		<View height="50"  bottom="0" layout="horizontal" width="100%"  >
			<View left="0" width="24.5%" id="undo_btn" backgroundColor="#375540" onClick="undo"><Label>UNDO</Label></View>
			<View width="50%"  ></View>
			<View right="0" width="25%" id="done_btn" backgroundColor="#375540" onClick="done"><Label>DONE</Label></View>
		</View>
	</View>
	
</Alloy>