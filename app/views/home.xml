<Alloy>
	<View>
		<View layout="vertical" id="loadingBar" height="120" width="120" borderRadius="15"  backgroundColor="#2E2E2E" >
	        <ActivityIndicator  id="activityIndicator" />
	    	<Label top="5" text="Loading" color="#ffffff" />
	    </View>
	    
		<View class="container" layout="vertical" > 
			<View id="header" backgroundColor="#375540">
				<View backgroundImage="/images/GO_inventory_hoz.png" height="35" width="35" left="10"></View>
				<Label class="h1" id="appTitle">HOME</Label>
				<View backgroundImage="/images/more-button.png" height="35" width="35" onClick="menuToggle" right="10"></View>
			</View>
			<View class="content" height="auto">
				<View backgroundColor="#ffffff" height="Ti.UI.FILL" left="5" top="5" right="5" bottom="5" layout="vertical">
					<View onClick="goTo" mod="assignment" backgroundImage="/images/menu/menu_assignment.jpg" width="Ti.UI.FILL" height="33%"></View>
					<View width="Ti.UI.FILL" height="33%" top="5" layout="horizontal">
						<View onClick="goTo" mod="history" backgroundImage="/images/menu/menu_scan_history.jpg" width="49%" right="5"></View>
						<View onClick="goTo" mod="viewProduct" backgroundImage="/images/menu/menu_view_product.jpg" width="auto"></View>
					</View>
					<View width="Ti.UI.FILL" height="33%" top="5" layout="horizontal">
						<View onClick="goTo" mod="inventory" backgroundImage="/images/menu/menu_inventory.jpg" width="49%" right="5"></View>
						<View width="auto" layout="vertical">
							<View onClick="goTo" mod="news" backgroundImage="/images/menu/menu_news_events.jpg" height="49%" bottom="5" width="Ti.UI.FILL"></View>
							<View height="auto" width="Ti.UI.FILL" layout="horizontal">
								<View onClick="goTo" mod="stockOut" backgroundImage="/images/menu/menu_stockout.jpg" width="49%" right="5"></View>
								<View onClick="goTo" mod="settings" backgroundImage="/images/menu/menu_setting.jpg" width="auto"></View>
							</View>
						</View>
					</View>
				</View>	 
			</View>
		</View>
	</View>
</Alloy>